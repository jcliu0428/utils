# image num to visualize
for i in range(100):
    image = cv2.imread('img_path')
    HEIGHT,WIDHT = np.shape(image)[0:2]
    new_img = np.zeros((HEIGHT,WIDTH,3))
    for idx,instance in enumerate(np.unique(image)):
        instance_mask = image[:,:,0] == instance
        color_mask = color_list[idx % len(color_list),0:3]
        new_img[instance_mask] = color_mask
        
    cv2.imwrite(osp.join('colorMask','new_img' + str(i) + '.png'),new_img)
